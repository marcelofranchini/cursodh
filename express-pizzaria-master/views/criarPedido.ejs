<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head', {titulo:"Cadastro de Pedido"}) %> 
    <body>
        <%- include('includes/header') %> 

        <main class="container">
            <div class="row">
                <div class="col-12">
                    <h1>Faça seu pedido</h1>
                </div>
                <div class="col-12">
                    <form class="w-50" action="/pedido/teste" method="GET">
                        <div class="form-group">
                            <label for="nomeComprador">Seu nome</label>
                            <input class="form-control" name="nomeComprador" id="nomeComprador" type="text">
                        </div>
                        <div class="form-group">
                            <label for="enderecoComprador">Seu endereço</label>
                            <input class="form-control" name="enderecoComprador" id="enderecoComprador" type="text">
                        </div>
                        <div class="form-group">
                            <label for="nomePizza">Nome da Pizza</label>
                            <input class="form-control" name="nomePizza" id="nomePizza" type="text">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Finalizar Pedido</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
           
    </body>
</html>